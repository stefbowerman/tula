        },
        {
          "value": "8000",
          "label": "8 Seconds"
        },
        {
          "value": "9000",
          "label": "9 Seconds"
        },
        {
          "value": "10000",
          "label": "10 Seconds"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Display slides as full width"
    },
    {
       "type": "select",
